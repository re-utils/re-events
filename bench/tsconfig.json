{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // Bundler mode
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    // Paths
    "paths": {
      "re-events/*": ["../src/*"]
    }
  },
  "include": ["./**/*.ts"]
}
